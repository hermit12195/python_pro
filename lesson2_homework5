class MutableClass:
    """
    The class adds attributes to the object and removes attributes from the object.

    Methods:
    _______
    add_attribute(name: str, value: str)
        Adds attribute to the object.

    remove_attribute(name: str)
        Removes attribute from the object.
    """

    def add_attribute(self, name: str, value: str):
        """
        Adds attribute to the object.
        :param name: str
        :param value: str
        :return: setattr
        """
        return setattr(self, name, value)

    def remove_attribute(self, name: str):
        """
        Removes attribute from the object.
        :param name: str
        :return: delattr
        """
        return delattr(self, name)
